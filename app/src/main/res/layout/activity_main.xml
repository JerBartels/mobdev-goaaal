<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    tools:context="com.example.android.goaaal.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="24dp"
                    android:text="man city"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="28sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/homeTeam_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="0"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="56sp" />

                <Button
                    android:id="@+id/btn_homeTeam_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="4dp"
                    android:onClick="scoreForHomeTeam"
                    android:text="@string/btn_goal" />

                <TextView
                    android:id="@+id/homeTeam_foul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="0"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="56sp" />

                <Button
                    android:id="@+id/btn_homeTeam_foul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:onClick="foulForHomeTeam"
                    android:text="@string/btn_foul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="24dp"
                    android:text="juventus"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/awayTeam_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="56sp" />

                <Button
                    android:id="@+id/btn_awayTeam_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="4dp"
                    android:onClick="scoreForAwayTeam"
                    android:text="@string/btn_goal" />

                <TextView
                    android:id="@+id/awayTeam_foul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="56sp" />

                <Button
                    android:id="@+id/btn_awayTeam_foul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:onClick="foulForAwayTeam"
                    android:text="@string/btn_foul" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:onClick="resetMatch"
            android:text="reset match"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
